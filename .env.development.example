# Development Environment Configuration
# Copy this file to .env.development and update with your local values

# Application Environment
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/mvp_dev?sslmode=disable
DATABASE_POOL_SIZE=5
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://dev_user:dev_password@dev-cluster.mongodb.net/mvp_dev?retryWrites=true&w=majority

# Redis Configuration
REDIS_URL=redis://:dev_password@localhost:6379/0
REDIS_MAX_RETRIES=3
REDIS_TIMEOUT=5000

# Security Secrets (Use strong values in production)
JWT_SECRET=dev-jwt-secret-change-this-in-production
JWT_EXPIRATION=7d
API_KEY_SECRET=dev-api-key-secret-change-this-in-production
ENCRYPTION_KEY=dev-encryption-key-change-this-in-production

# Services Configuration
WORKER_CONCURRENCY=2
WORKER_QUEUE_NAME=development

# Feature Flags
ENABLE_BLUE_GREEN_DEPLOYMENT=false
ENABLE_EXPERIMENTAL_FEATURES=true

# Monitoring (optional)
SENTRY_DSN=

# Logging
LOG_FORMAT=pretty
LOG_COLORIZE=true

# API Configuration
API_TIMEOUT=30000
API_RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=dev-session-secret
SESSION_TIMEOUT=3600000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SESSION=1800
CACHE_TTL_CONFIG=86400

# Email Configuration (development)
EMAIL_PROVIDER=console
EMAIL_FROM=dev@example.com

# External Services (optional)
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# Testing
TEST_DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/mvp_dev_test
TEST_TIMEOUT=10000
